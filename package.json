{
  "name": "video-streaming-backend",
  "version": "1.0.0",
  "description": "YouTube-like video streaming with chunk-based delivery",
  "main": "src/server.js",
  "scripts": {
    "start": "node backend/src/server.js",
    "dev": "nodemon backend/src/server.js",
    "test": "jest --coverage",
    "debug": "node backend/scripts/debugPaths.js",
    "upload:test": "node backend/scripts/testUpload.js",
    "upload:manual": "node backend/scripts/createUploadsManually.js",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend"
